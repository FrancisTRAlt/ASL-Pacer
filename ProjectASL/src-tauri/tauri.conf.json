{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ASL-Pacer",
  "version": "0.1.0",
  "identifier": "com.xst-tran6832.projectasl",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "ASL-Pacer",
        "width": 800,
        "height": 600,
        "resizable": false,
        "maximizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/Logo.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
